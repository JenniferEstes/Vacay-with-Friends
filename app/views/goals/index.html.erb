<h1>All Goals</h1>

<% if @goals.present? %>
  <table class="goal-table">
    <tr>
      <th>Amount</th>
    </tr>
    <% @goals.each do |g| %>
      <tr>
        <td><%= button_to g.amount, vacation_goal_path(g.vacation, g), method: "get" %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @goals.empty? %>
  <h5>No goals planned yet. :(</h5>
<% end %>
<br>
<br>
<h5><%= button_to 'Add Goal', new_vacation_goal_path(@vacation), method: "get" %></h5>
<h5><%= button_to 'Back to Vacations', group_vacations_path(@vacation.group), method: "get" %></h5>
