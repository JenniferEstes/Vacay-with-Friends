<h1>All Groups</h1>

<% if @groups.empty? %>
<h5> You are not in any groups. :(</h5>
<br>
<% end %>
<%= button_to "Add a group", new_group_path, method: "get" %>

<table class="group-table">
  <% @groups.each do |g| %>
    <tr>
      <td><%= button_to g.name, group_path(g), method: "get" %></td>
    </tr>
  <% end %>
</table>
<br>
<%= button_to 'Back to User', user_path(current_user), method: :get %>
